<Window x:Class="SalesWPFApp.AdminHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="AdminHome" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="Auto">
            <TextBlock HorizontalAlignment="Center"
                   FontSize="35" FontWeight="Bold" Background="Aqua">
            Welcome to admin home
            </TextBlock>

            <Button Content="Member Management"
                FontSize="25" Height="40"
                Margin="0, 10, 0, 0"
                Name="btnMember"
                Click="btnMember_Click"/>

            <Button Content="Product Management"
                FontSize="25" Height="40"
                Margin="0, 10, 0, 0"
                Name="btnProduct"
                Click="btnProduct_Click"/>

            <Button Content="Order Management"
                FontSize="25" Height="40"
                Margin="0, 10, 0, 0"
                Name="btnOrder"
                Click="btnOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>
